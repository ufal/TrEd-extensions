<?xml version="1.0" encoding="utf-8"?>
<pml_schema version="1.1" xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/">
    <revision>0.0.1</revision>
    <description>PADT Words Level</description>

    <root name="WordsLevel" type="Document.type"/>

    <type name="Document.type">
        <structure>
            <member name="meta">
                <structure>
                    <member name="revision">
                        <cdata format="any"/>
                    </member>
                    <member name="date">
                        <cdata format="any"/>
                    </member>
                    <member name="document">
                        <cdata format="any"/>
                    </member>
                </structure>
            </member>
            <member name="data" required="1">
                <sequence role="#TREES">
                    <element name="Para" type="Para.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Para.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Unit" type="Unit.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Unit.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Word" type="Word.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Word.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
        </structure>
    </type>

    <type name="String.type">
        <cdata format="any"/>
    </type>

    <type name="ID.type">
        <cdata format="ID"/>
    </type>

</pml_schema>
