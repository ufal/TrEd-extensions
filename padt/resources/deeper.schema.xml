<?xml version="1.0" encoding="utf-8"?>
<pml_schema version="1.1" xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/">
    <revision>1.0.0</revision>
    <description>PADT Deep Syntax</description>

    <root name="DeepLevels" type="Trees.type"/>

    <type name="Trees.type">
        <structure>
            <member name="meta">
                <structure>
                    <member name="revision">
                        <cdata format="any"/>
                    </member>
                    <member name="date">
                        <cdata format="any"/>
                    </member>
                </structure>
            </member>
            <member name="data" required="1">
                <sequence role="#TREES">
                    <element name="Tree" type="Tree.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Tree.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="ord" required="1" role="#ORDER" type="Order.type"/>
            <member name="func" required="1">
                <constant>SENT</constant>
            </member>
            <member name="score" type="Score.type"/>
            <member name="note" type="String.type"/>
            <member name="form" type="String.type"/>
            <member name="hide" type="String.type" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Node.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="ord" required="1" role="#ORDER" type="Order.type"/>
            <member name="func" type="Functor.type" required="1"/>
            <member name="score" type="Score.type"/>
            <member name="note" type="String.type"/>
            <member name="context" type="Context.type"/>
            <member name="parallel" type="Parallel.type"/>
            <member name="paren" type="Paren.type"/>
            <member name="coref" type="String.type"/>
            <member name="clause" type="Clause.type"/>
            <member name="morpho" type="Morpho.type"/>
            <member name="syntax" type="Syntax.type"/>
            <member name="hide" type="String.type" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Context.type">
        <choice>
            <value>B</value>
            <value>C</value>
            <value>N</value>
        </choice>
    </type>

    <type name="Syntax.type">
        <structure>
            <!--<member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>-->
            <member name="ord" type="Order.type"/>
            <member name="afun" type="Afun.type"/>
            <member name="note" type="String.type"/>
            <member name="parallel" type="Parallel.type"/>
            <member name="paren" type="Paren.type"/>
            <member name="arabfa" type="String.type"/>
            <member name="coref" type="Coref.type"/>
            <member name="clause" type="Clause.type"/>
            <member name="parent" type="String.type"/>
        </structure>
    </type>

    <import schema="syntax.schema.xml"/>

