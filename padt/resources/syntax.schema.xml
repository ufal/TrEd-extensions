<?xml version="1.0" encoding="utf-8"?>
<pml_schema version="1.1" xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/">
    <revision>1.1.0</revision>
    <description>PADT Surface Syntax</description>

    <root name="Analytic" type="Trees.type"/>

    <type name="Trees.type">
        <structure>
            <member name="meta">
                <structure>
                    <member name="revision">
                        <cdata format="any"/>
                    </member>
                    <member name="date">
                        <cdata format="any"/>
                    </member>
                </structure>
            </member>
            <member name="data" required="1">
                <sequence role="#TREES">
                    <element name="Tree" type="Tree.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Tree.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="ord" required="1" role="#ORDER" type="Order.type"/>
            <member name="afun" required="1">
                <choice>
                    <value>AuxS</value>
                    <value>AuxX</value>
                    <value>???</value>
                </choice>
            </member>
            <member name="score" type="Score.type"/>
            <member name="note" type="String.type"/>
            <member name="form" type="String.type"/>
            <member name="hide" type="String.type" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Node.type">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID.type"/>
            <member name="ord" required="1" role="#ORDER" type="Order.type"/>
            <member name="afun" type="Afun.type" required="1"/>
            <member name="score" type="Score.type"/>
            <member name="note" type="String.type"/>
            <member name="parallel" type="Parallel.type"/>
            <member name="paren" type="Paren.type"/>
            <member name="arabfa" type="String.type"/>
            <member name="coref" type="Coref.type"/>
            <member name="clause" type="Clause.type"/>
            <member name="morpho" type="Morpho.type"/>
            <member name="hide" type="String.type" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node.type"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Afun.type">
        <choice>
            <value>Pred</value>
            <value>Pnom</value>
            <value>PredE</value>
            <value>PredC</value>
            <value>PredM</value>
            <value>PredP</value>
            <value>Sb</value>
            <value>Obj</value>
            <value>Adv</value>
            <value>Atr</value>
            <value>Atv</value>
            <value>ExD</value>
            <value>Coord</value>
            <value>Apos</value>
            <value>Ante</value>
            <value>AuxS</value>
            <value>AuxX</value>
            <value>AuxC</value>
            <value>AuxP</value>
            <value>AuxE</value>
            <value>AuxM</value>
            <value>AuxY</value>
            <value>AuxG</value>
            <value>AuxK</value>
            <value>ObjAtr</value>
            <value>AtrObj</value>
            <value>AdvAtr</value>
            <value>AtrAdv</value>
            <value>AtrAtr</value>
            <value>???</value>
        </choice>
    </type>

    <type name="Parallel.type">
        <choice>
            <value>Co</value>
            <value>Ap</value>
        </choice>
    </type>

    <type name="Paren.type">
        <choice>
            <value>Pa</value>
        </choice>
    </type>

    <type name="Coref.type">
        <choice>
            <value>Ref</value>
            <value>Msd</value>
        </choice>
    </type>

    <type name="Clause.type">
        <choice>
            <value>Pred</value>
            <value>Pnom</value>
            <value>PredE</value>
            <value>PredC</value>
            <value>PredM</value>
            <value>PredP</value>
        </choice>
    </type>

    <type name="Order.type">
        <cdata format="nonNegativeInteger"/>
    </type>

    <type name="Morpho.type">
        <structure>
            <member name="Token" type="Token.type"/>
            <member name="Lexeme" type="Lexeme.type"/>
            <member name="Word" type="Word.type"/>
        </structure>
    </type>

    <import schema="morpho.schema.xml" type="Entry.type"/>

    <import schema="morpho.schema.xml" type="Morphs.type"/>

    <import schema="morpho.schema.xml" type="Root.type"/>

    <import schema="morpho.schema.xml" type="Tags.type"/>

    <import schema="morpho.schema.xml" type="Score.type"/>

    <import schema="morpho.schema.xml" type="String.type"/>

    <import schema="morpho.schema.xml" type="ID.type"/>

    <type name="Word.type">
        <structure>
            <member name="id" as_attribute="1" role="#ID" type="ID.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
        </structure>
    </type>

    <type name="Lexeme.type">
        <structure>
            <member name="id" as_attribute="1" role="#ID" type="ID.type"/>
            <member name="root" type="Root.type"/>
            <member name="core" type="Entry.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
        </structure>
    </type>

    <type name="Token.type">
        <structure>
            <member name="id" as_attribute="1" role="#ID" type="ID.type"/>
            <member name="morphs" type="Morphs.type"/>
            <member name="tag" type="Tags.type"/>
            <member name="form" type="String.type"/>
            <member name="note" type="String.type"/>
            <member name="gloss" type="String.type"/>
        </structure>
    </type>

</pml_schema>
