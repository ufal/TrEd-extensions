<?xml version="1.0" encoding="utf-8"?>
<pml_schema version="1.1" xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/">
    <revision>1.1.2</revision>
    <description>PADT Surface Syntax</description>

    <reference name="morpho" readas="pml"/>

    <import schema="morpho.schema.xml" type="Unit"/>

    <derive type="Unit">
        <structure>
            <member name="id" as_attribute="1" required="1" role="#ID">
                <cdata format="PMLREF"/>
            </member>
        </structure>
    </derive>

    <import schema="morpho.schema.xml" type="Word"/>

    <derive type="Word">
        <structure>
            <member name="id" as_attribute="1" required="1" role="#ID">
                <cdata format="PMLREF"/>
            </member>
        </structure>
    </derive>

    <import schema="morpho.schema.xml" type="Token"/>

    <derive type="Token">
        <structure>
            <member name="id" as_attribute="1" required="1" role="#ID">
                <cdata format="PMLREF"/>
            </member>
        </structure>
    </derive>

    <import schema="morpho.schema.xml" type="String"/>

    <import schema="morpho.schema.xml" type="Score"/>

    <import schema="morpho.schema.xml" type="ID"/>

    <root name="PADT-Syntax" type="Trees"/>

    <type name="Trees">
        <structure>
            <member name="meta">
                <structure>
                    <member name="revision">
                        <cdata format="any"/>
                    </member>
                    <member name="date">
                        <cdata format="any"/>
                    </member>
                </structure>
            </member>
            <member name="data" required="1">
                <sequence role="#TREES">
                    <element name="Tree" type="Tree"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Tree">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID"/>
            <member name="w.rf" role="#KNIT" type="Unit">
                <cdata format="PMLREF"/>
            </member>
            <member name="ord" required="1" role="#ORDER" type="ORDER"/>
            <member name="afun" required="1">
                <choice>
                    <value>AuxS</value>
                    <value>AuxX</value>
                    <value>???</value>
                </choice>
            </member>
            <member name="score" type="Score"/>
            <member name="note" type="String"/>
            <member name="form" type="String"/>
            <member name="hide" type="String" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Node">
        <structure role="#NODE">
            <member name="id" as_attribute="1" required="1" role="#ID" type="ID"/>
            <member name="w.rf" role="#KNIT" type="Word">
                <cdata format="PMLREF"/>
            </member>
            <member name="m.rf" role="#KNIT" type="Token">
                <cdata format="PMLREF"/>
            </member>
            <member name="ord" required="1" role="#ORDER" type="ORDER"/>
            <member name="afun" type="Afun" required="1"/>
            <member name="score" type="Score"/>
            <member name="note" type="String"/>
            <member name="parallel" type="Parallel"/>
            <member name="paren" type="Paren"/>
            <member name="arabfa" type="String"/>
            <member name="coref" type="Coref"/>
            <member name="clause" type="Clause"/>
            <member name="hide" type="String" role="#HIDE"/>
            <member name="with" role="#CHILDNODES">
                <sequence>
                    <element name="Node" type="Node"/>
                </sequence>
            </member>
        </structure>
    </type>

    <type name="Afun">
        <choice>
            <value>Pred</value>
            <value>Pnom</value>
            <value>PredE</value>
            <value>PredC</value>
            <value>PredM</value>
            <value>PredP</value>
            <value>Sb</value>
            <value>Obj</value>
            <value>Adv</value>
            <value>Atr</value>
            <value>Atv</value>
            <value>ExD</value>
            <value>Coord</value>
            <value>Apos</value>
            <value>Ante</value>
            <value>AuxS</value>
            <value>AuxX</value>
            <value>AuxC</value>
            <value>AuxP</value>
            <value>AuxE</value>
            <value>AuxM</value>
            <value>AuxY</value>
            <value>AuxG</value>
            <value>AuxK</value>
            <value>ObjAtr</value>
            <value>AtrObj</value>
            <value>AdvAtr</value>
            <value>AtrAdv</value>
            <value>AtrAtr</value>
            <value>???</value>
        </choice>
    </type>

    <type name="Parallel">
        <choice>
            <value>Co</value>
            <value>Ap</value>
        </choice>
    </type>

    <type name="Paren">
        <choice>
            <value>Pa</value>
        </choice>
    </type>

    <type name="Coref">
        <choice>
            <value>Ref</value>
            <value>Msd</value>
        </choice>
    </type>

    <type name="Clause">
        <choice>
            <value>Pred</value>
            <value>Pnom</value>
            <value>PredE</value>
            <value>PredC</value>
            <value>PredM</value>
            <value>PredP</value>
        </choice>
    </type>

    <type name="ORDER">
        <cdata format="nonNegativeInteger"/>
    </type>

</pml_schema>
